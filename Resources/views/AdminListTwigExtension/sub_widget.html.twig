{#
    Ce template est utiliser pour les sublist la principal attention a avoir c'est l'absence de pagination
#}
{% set currentPath = app.request.attributes.get('_route') %}
{% set params = app.request.attributes.get('_route_params') %}

<div class="table_overflow_fix table-responsive">
    {% if adminlist.canAdd() or adminlist.canExport() or  adminlist.hasListActions or adminlist.isLoggable() %}
        <div class="extra_actions_header">
            <div class="btn-group pull-right">
                {% include 'LleAdminListBundle:Default:_list_actions.html.twig' 
                with { 'adminlist':adminlist, 'parentAdminlist': parentAdminlist,'parentItem':parentItem } %}
            </div>
        </div>
    {% endif %}
    <table class="table table-striped table-hover table-bordered {% if adminlist.hasSort() %}table-sortable{% endif %} responsive">
        <thead>
            <tr>
                {% for column in adminlist.columns%}
                    {% set columnName = column.name %}
                    {% set columnkey = column.header %}
                    {% set orderDirection = "DESC" %}
                        {% set extraHeaderClass = "" %}
                        {% if ( columnName == adminlist.orderBy )%}
                            {% if adminlist.orderDirection == "DESC" %}
                                {% set orderDirection = "ASC" %}
                                {% set extraHeaderClass = "sorting_desc" %}
                            {% else %}
                                {% set extraHeaderClass = "sorting_asc" %}
                            {% endif %}
                        {% else %}
                            {% set extraHeaderClass = "sorting" %}                        
                        {% endif %}
                    {% set extraparams = sublist.getParamsForOrderBy(columnName,orderDirection) %}
                    <th {% if column.style %} style="{{ column.style }}"  {% endif %}{% if adminlist.hasSort(columnName) %} class="{{extraHeaderClass}}" onclick="window.location = '{{ path(currentPath, params|merge(extraparams))}}'"{% endif %}>
                        <span class="pull-right sort-icon"></span>
                        {{ columnkey | trans }}
                    </th>
                {% endfor %}
                {% if not adminlist.hideItemAction() %}
                    <th class="actions-header">{{ 'Actions'|trans }}</th>
                {% endif %}
            </tr>
        </thead>
        <tbody>
        {% for item in adminlist.items(extraparams) %}
            {% include 'LleAdminListBundle:Default:_line.html.twig' with {'adminlist':adminlist,'item':item,'index':loop.index} %}
        {% endfor %}
        </tbody>
    </table>

    <script>
        function deleteElement(elm, data){
            if(data.status == 'ok'){
                $('#'+elm.attr('data-line')).hide();
            } else {
                lle.dialog('error', data.message);
            }
        }

        function reloadLine(elm,tr){
                $('#'+elm.attr('data-line')).replaceWith(tr);
                $("select.select2").select2();
        }
    </script>
</div>
