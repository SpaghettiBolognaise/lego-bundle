 <div id="sure-modal-{{ item.id }}" class="modal fade">
        <{% if configurator.isXhrDelete %}div{% else %}form{% endif %} style="
            width: 600px;
            height: 154px;
            background-color: #fff;
            margin: auto;
            margin-top: 50px;"
            action="{{ path(configurator.getPathRoute('delete'),configurator.getPathParams('item') ) }}" method="POST">
            <div class="modal-header">
                <button class="close" data-dismiss="modal">&times;</button>
                <h3>Voulez vous vraiment supprimer cet objet ?</h3>
            </div>
            <div class="modal-footer">
                <div class="btn_group">
                    {% if configurator.isXhrDelete %}
                        <a class="lle-ajax btn btn-danger"
                        data-callback="deleteElement"
                        data-dismiss="modal"
                        data-url="{{ path(configurator.getPathRoute('delete'),configurator.getPathParams('item') ) }}"
                        data-line="line-{{ item.id }}">Oui</a>
                    {% else %}
                        <button type="submit" class="btn btn-danger" value="delete" name="delete" >Oui</button>
                    {% endif %}
                    <button class="btn" data-dismiss="modal">Non</button>
                </div>
            </div>
        </{% if configurator.isXhrDelete %}div{% else %}form{% endif %}>

    </div>
