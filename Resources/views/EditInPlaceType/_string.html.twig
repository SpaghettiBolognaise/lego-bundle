{% if '\n' in value %}
    <textarea  class=" form-control col-md-12" id="{{ component.gid('input') }}-{{ field.name }}-{{ item.id }}">{{ value }}</textarea>
{% else %}
    <input  class="lego-edit-in-place-input" id="{{ component.gid('input') }}-{{ field.name }}-{{ item.id }}" type="text" value="{{ value }}"/>
{% endif %}