{% include component.partial('breaker_separator') with {'separator':collection.breaker.header, 'collection': collection, 'nbCol': nbCol } %}
<tbody id="{{ component.gid('breaker_content') ~ '_' ~ collection.id  }}">
    {%  if collection.hasCollections %}
        {% for collection in collection.collections %}
            {% include component.partial('breaker') with {'component':component ,'collection':collection} %}
        {%  endfor %}
    {%  else %}
        {%  for entity in collection.entities %}
            {% include component.partial('line') with {'component':component ,'item':entity} %}
        {%  endfor %}
    {%  endif %}
    {% if collection.breaker.footer %}
        {% include component.partial('breaker_separator') with {'separator':collection.breaker.footer, 'collection': collection, 'nbCol': nbCol } %}
    {% endif %}
</tbody>