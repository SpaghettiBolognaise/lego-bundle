<div class="box">
    <div class="box-body">
<div class="table_overflow_fix table-responsive">
    <table class="table table-striped table-hover table-bordered table-sortable responsive">
        <thead>
        <tr>
            {% set nbCol = 1 %}
            {% if configurator.hasBulkActions %}
                {% set nbCol = nbCol + 1 %}
                <th style="width: 15px;">
                    <input type="checkbox" id="js-all-bulk-checkbox">
                </th>
            {% endif %}
            {% for column in component.columns() %}
                {% if column.autoDisplay %}
                    {% set nbCol = nbCol + 1 %}
                    {% set columnName = column.name %}
                    {% set columnkey = column.header %}
                    {% set orderDirection = "DESC" %}
                    {% set extraHeaderClass = "" %}
                    {% if ( columnName == configurator.orderBy )%}
                        {% if configurator.orderDirection == "DESC" %}
                            {% set orderDirection = "ASC" %}
                            {% set extraHeaderClass = "sorting_desc" %}
                        {% else %}
                            {% set extraHeaderClass = "sorting_asc" %}
                        {% endif %}
                    {% else %}
                        {% set extraHeaderClass = "sorting" %}
                    {% endif %}
                    <th {% if column.style %} style="{{ column.style }}"  {% endif %} class="{{extraHeaderClass}}" onclick="window.location = '{{ path(configurator.getPathRoute('index'), { 'orderBy': columnName, "orderDirection": orderDirection })}}'">
                        <span class="pull-right sort-icon"></span>
                        {{ columnkey | trans }}
                    </th>
                {% endif %}
            {% endfor %}
            {% if not configurator.hideItemAction() %}
                <th class="actions-header">{{ 'Actions'|trans }}</th>
            {% endif %}
        </tr>
        </thead>
        <tbody>

        {% for item in configurator.items() %}
            {# {% include 'IdkLegoBundle:Default:_rupture.html.twig' with {'adminlist':adminlist,'item':item,'first':loop.first} %} #}
            {% include component.partial('line') with {'component':component ,'item':item} %}
        {% endfor %}

        </tbody>
    </table>
</div>
    </div></div>