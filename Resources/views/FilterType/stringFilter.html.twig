   <div class="input-group">
      <div class="input-group-btn">
        <button type="button" class="btn btn-default dropdown-toggle {{nameprefix}}button{{namesuffix}}" data-toggle="dropdown" aria-expanded="false">

          <i title="Contient" class="fa fa-text-width contains"></i>
          <i title="Commence par" class="fa fa-caret-square-o-right startswith"></i>
          <i title="Termine par" class="fa fa-caret-square-o-left endswith"></i>
          <i title="Est vide" class="fa fa-square-o isnull"></i>
        </button>
        <ul class="dropdown-menu" role="menu">
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#" onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','contains');">
            <i class="fa fa-text-width"></i>{{ 'lego.filter.content'|trans }}</a>
          </li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#"  onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','startswith');">
            <i class="fa fa-caret-square-o-right"></i>{{ 'lego.filter.start'|trans }}</a>
          </li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#"  onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','endswith');">
            <i class="fa fa-caret-square-o-left"></i>{{ 'lego.filter.end'|trans }}</a>
          </li>
          <li role="presentation"><a role="menuitem" tabindex="-1" href="#"  onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','isnull');">
            <i class="fa fa-square-o "></i>{{ 'lego.filter.empty'|trans }}</a>
          </li>
        </ul>
      </div><!-- /btn-group -->

<input type="hidden" class="form-control" id="{{nameprefix}}comparator{{namesuffix}}" name="{{nameprefix}}comparator{{namesuffix}}" {% if data.comparator is defined %}value="{{data.comparator}}"{% endif %}>


<input type="text"  class="form-control"  aria-label="..." name="{{nameprefix}}value{{namesuffix}}"
      {% if data.value is defined %}
        value="{{data.value}}"
      {% endif %}
        />
    </div><!-- /input-group -->


<script>
$(document).ready(function() {
  lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','{% if data.comparator is defined %}{{data.comparator}}{% elseif filtertype.defaultComparator is defined %}{{filtertype.defaultComparator}}{% else %}startswith{% endif %}');
});
</script>
