<div class="input-group">
    <div class="input-group-btn">
        <button type="button" class="btn btn-default dropdown-toggle {{nameprefix}}button{{namesuffix}}" data-toggle="dropdown" aria-expanded="false">
            <i title="Est égal à" class="fa fa-text-width eq"></i>
            <i title="N'est pas égal à" class="fa fa-exclamation neq"></i>
            <i title="Plus petit que" class="fa fa-chevron-left lte"></i>
            <i title="Plus grand que" class="fa fa-chevron-right gte"></i>
        </button>
        <ul class="dropdown-menu" role="menu">
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#" onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','eq');">
                    <i class="fa fa-text-width"></i>{{  'lego.filter.is_eq'|trans }}</a>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#"  onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','neq');">
                    <i class="fa fa-exclamation"></i>{{  'lego.filter.is_neq'|trans }}</a>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#"  onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','lte');">
                    <i class="fa fa-chevron-left"></i>{{  'lego.filter.is_lte'|trans }}</a>
            </li>
            <li role="presentation"><a role="menuitem" tabindex="-1" href="#"  onclick="return lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','gte');">
                    <i class="fa fa-chevron-right"></i>{{  'lego.filter.is_gte'|trans }}</a>
            </li>
        </ul>
    </div>
    <input type="hidden" class="form-control" id="{{nameprefix}}comparator{{namesuffix}}" name="{{nameprefix}}comparator{{namesuffix}}" {% if data.comparator is defined %}value="{{data.comparator}}"{% endif %}>

    <input class="form-control"  type="text" name="{{nameprefix}}value{{namesuffix}}" id="{{nameprefix}}value{{namesuffix}}"
            {% if data.value is defined %}
                value="{{data.value}}"
            {% endif %}
    />
</div>
<script>
    $(document).ready(function() {
        lego.filter_set_button('#{{nameprefix}}comparator{{namesuffix}}','.{{nameprefix}}button{{namesuffix}}','{% if data.comparator is defined %}{{data.comparator}}{% elseif filtertype.defaultComparator is defined %}{{filtertype.defaultComparator}}{% else %}eq{% endif %}');
    });
</script>
